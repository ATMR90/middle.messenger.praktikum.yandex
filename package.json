{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "---",
  "scripts": {
    "clean:cache": "rm -rf .parcel-cache/*",
    "clean:output": "npm run clean:cache && rm -rf dist/*",
    "clean:output:copy": "npm run clean:output && copyfiles -u 1 ./src/assets/img/** ./dist",
    "stylelint": "stylelint \"**/*.scss\"",
    "eslint": "eslint . --ext .js,.ts",
    "lint": "npm run stylelint && npm run eslint",
    "pug": "npm run clean:output && parcel ./src/pug/index.pug --port 3000",
    "pug:build": "npm run clean:output && parcel build ./src/pug/index.pug",
    "pug:serve": "npm run pug:build && node ./server/server.js",
    "ts": "npm run clean:output:copy && parcel ./src/index.html --port 3000",
    "ts:build": "npm run clean:output:copy && parcel build ./src/index.html",
    "ts:serve": "npm run ts:build && node ./server/server.js",
    "dev": "npm run ts",
    "build": "npm run ts:build",
    "start": "npm run ts:serve",
    "netlify": "npm run ts:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ATMR90/middle.messenger.praktikum.yandex.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ATMR90/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/ATMR90/middle.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@parcel/transformer-pug": "2.7.0",
    "@parcel/transformer-sass": "2.7.0",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "copyfiles": "2.4.1",
    "dotenv": "16.0.1",
    "eslint": "8.23.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "express": "4.18.1",
    "express-history-api-fallback": "2.2.1",
		"express-rate-limit": "6.6.0",
    "parcel": "2.7.0",
    "parcel-transformer-pug-precompile": "1.0.6",
    "pug": "3.0.2",
    "sass": "1.54.4",
    "stylelint": "14.11.0",
    "stylelint-config-standard": "28.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "stylelint-scss": "4.3.0",
    "typescript": "4.7.4",
    "uuid": "8.3.2"
  }
}
